<h1>Products</h1>
<%= link_to "ADD" , new_product_path , class: "btn btn-success "  %>
<table class="table">
  <thead>
  <tr>
    <th scope="col">#</th>
    <th scope="col">name</th>
    <th scope="col">price</th>
    <th scope="col">image</th>
    <th scope="col">description</th>
    <th scope="col">created by</th>
    <th scope="col">options</th>
  </tr>
  </thead>
  <tbody>
  <% @products.each do |product| %>
    <tr>
      <td><%= product.id %></td>
      <td><%= product.name %></td>
      <td><%= product.price %></td>
      <td><img width="100" src=<%= url_for product.image %>></td>
      <td><%= product.description %></td>
      <td><%= link_to product.admin.name, "/admins/#{product.admin.id}" %></td>
      <td>
        <div style=" display: flex ">
          <!--      <a class="btn btn-primary" href="<%#= product_ %>"></a>-->
          <%= link_to "Destroy", product_path(product), data:{
            turbo_method: :delete,
            turbo_confirm: "Are you sure?"

          } ,class: "btn btn-danger "%>
          <%= link_to "Show more" ,product_path(product),class: "btn btn-primary "%>
          <%= link_to "Edit" ,edit_product_path(product),class: "btn btn-warning "%>
        </div>
      </td>

    </tr>
  <% end %>
  </tbody>
</table>
<p>Find me in app/views/products/index.html.erb</p>
